pipeline {
    agent any

    stages {
        stage('Build') {
            agent{
                docker {
                    image 'mcr.microsoft.com/playwright:v1.54.0-noble'
                    args '-u root:root '

                }
            }
            steps {
                sh ```
                npm install -g serve
                serve -s build &
                sleep 10
                npx playwright test
                ```
            }
        }
    }
}
